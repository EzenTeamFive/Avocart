console.log("전체 업체 개수 : " + listLength);
var remainder = listLength % 2;
console.log("나머지 : " + remainder);
//오른쪽 : 줄이기

if (remainder === 1) {
    $(document).ready(function () {
        $(".listContainer ul li:last-child").css("margin-right", "376px");
    });
}

